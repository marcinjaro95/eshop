<div class="super_container">

	<!-- Home -->

	<div class="home">
		<div class="home_container">
			<div class="home_background" style="background-image:url(images/contact.jpg)"></div>
			<div class="home_content_container">
				<div class="container">
					<div class="row">
						<div class="col">
							<div class="home_content">
								<div class="breadcrumbs">
									<ul>
										<li><a href="/">Strona główna</a></li>
										<li>Rejestracja</li>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Contact -->

	<div class="contact">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
          <div class="signup_info">
              <div class="signup_section">
                <div class="signup_section_title">Masz już konto ?</div>
                  <div class="button">
                    <a href="sign-in"><span>Zaloguj się</span></a>
                </div>
              </div>
            </div>
				</div>

				<!-- Contact Info -->
				<div class="col-lg-6 contact_col">
          	<div class="get_in_touch">
						<div class="section_title">Rejestracja</div>
						<br>
						{{# each errors}}
							<div class="alert alert-warning" role="alert">{{this.msg}}</div>
						{{/each}}
						{{#if info }}
						<div class="alert alert-success" role="alert">Konto założone poprawnie</div></div>
						{{/if}}
						<div class="contact_form_container">
							<form method="POST" action="/sign-up" id="signup_form" class="contact_form">
                <div class="row">
									<div class="col-xl-12">
										<!-- Name -->
										<label for="contact_name">Login*</label>
										<input type="text" name="username" class="contact_input" required="required">
								  </div>
								</div>
								<div class="row">
									<div class="col-xl-12">
										<!-- Name -->
										<label for="contact_name">Email*</label>
										<input type="text" name="email" class="contact_input" required="required">
								  </div>
								</div>
                <div class="row">
									<div class="col-xl-12">
										<!-- Name -->
										<label for="contact_name">Hasło*</label>
										<input type="password" name="password" class="contact_input" required="required">
								  </div>
								</div>
                <div class="row">
									<div class="col-xl-12">
										<!-- Name -->
										<label for="contact_name">Powtórz hasło*</label>
										<input type="password" name="passwordMatch" class="contact_input" required="required">
								  </div>
								</div>
								<button type="submit" class="button contact_button"><span>Zerejestruj</span></button>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
